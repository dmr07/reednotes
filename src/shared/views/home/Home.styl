@import "../../_frame/Colors.styl"

containerborder = 1px solid rgba(0,0,0,.06)

.home-wrapper
  font-size: 1em;
  width: 520px;
  font-weight: 400;
  line-height: 1.5em;
  margin: 40px auto;
  .bar 
    opacity: .3
    margin-top: 10px
    display:block;
  .profile-wrapper 
    margin-top: 100px;
    .profile-photo
      width: 160px;
      height: 160px;
      border-radius: 8px;
      margin-bottom: 10px;
      margin-right: 25px;
  .intro 
    font-size: 44px;
    margin: 100px 0 40px;
    color: #00545a;
    font-family: 'Minion Pro';
    padding-bottom: 10px;
    text-transform: uppercase;
    word-spacing: 0em;
    font-weight: 600;
    margin-top: 40px;
    letter-spacing: 0.24em;
    position: absolute
    top: 0
    left: 49%
  .sub-info 
    font-size: .76em;
    margin: 6px 0 80px;
    font-family: 'SF Pro Text';
    color:#000
    line-height: 1.6em
    opacity: .36
  .paragraph-intro
    color: #2b3446
    font-size: 1.1em;
    line-height: 1.55em;
    font-family:'CharterITC';
  .more-link
    font-family: 'Minion Pro';
    font-style:italic
    margin-bottom: 24px
    font-size:1.03em
    color: rgba(0,95,95,1);
  .pbreak
    height: 10px;
  .about-site
    font-weight: 500;
    margin-right: 2px;

.home-info-title
  border-top: containerborder
  font-weight: 500
  padding: 20px 0 6px;
  font-size: 14px
  text-align: center
  button
    opacity: .6
    margin: 0 2px 0
    &.active
      font-weight: 700
      opacity: 1
.home-info
  padding: 0 10px;
  border-radius: 6px
  .info-col
    padding: 4px 8px
  h3
    font-size: 10px
    color colorolive
    font-weight: 800
    margin: 4px 0 4px
    text-transform uppercase
  p
    font-size: 15px
    color: colordefault
    font-weight: 400
    margin-bottom: 0
  .info-label
    text-transform: uppercase
    font-family: "SF Compact Text"
    font-size: 10px
    font-weight: 700;
    color: colorbody
