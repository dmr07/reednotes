@import "./Colors.styl"

header
  text-align: left;
  font-weight: 500;
  padding: 4px 0 6px;
  width: 710px;
  position: fixed;
  background-color: rgba(0,35,45,0.96);
  bottom: 20px;
  z-index: 3;
  border-radius: 5px;
  left: calc(50% - 340px);
  ul 
    margin 0
    padding 0
  li
    display inline-block
    a 
      padding: 10px 16px;
      transition: 0.3s;
      color: #e7d0ba;
      text-transform: uppercase;
      font-size: 0.7em;
      letter-spacing: .14em;
      font-weight: 600;
      font-family: "proxima nova";
  .nav-sig 
    font-size: 1.6em !important;
    color: #000;
    display: inline-block;
    letter-spacing: .03em;
    color: #e7d0ba;
    margin-left: -30px;
    text-align: center;
    margin: 2px 20px 2px 50px;
    font-family: 'Autograf PERSONAL USE ONLY';
    
  .header-logo-text 
    text-align: left
    display:inline-block;
    font-size: 16px
  
  .header-links
    float:right
    li
      display: inline-block
      padding: 6px 20px;
      &.header-login
        background-color: colorlink
        border-radius: 4px
        font-weight: 600
        font-size: 13px
        a
          color: white !important
        
        
      