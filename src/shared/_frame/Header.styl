@import "./Colors.styl"

header
  text-align: left;
  font-weight: 500;
  font-family: 'graphik lcg web';
  padding: 4px 0 5px;
  width: 680px;
  position: fixed;
  background-color: rgba(0,0,0,.85);
  bottom: 20px;
  z-index: 3;
  border-radius: 5px;
  left: calc(50% - 340px);
  ul 
    margin 0
    padding 0
  li
    display inline-block
    a 
      padding: 10px 14px;
      transition: .3s;
      color: #fff;
      font-size: .8em;
  .nav-sig 
    font-size: 1.6em !important;
    color: #000;
    display: inline-block;
    letter-spacing: .03em;
    color: #fff;
    margin-left: -30px;
    text-align: center;
    margin: 2px 20px 2px 50px;
    font-family: 'Autograf PERSONAL USE ONLY';
    
  .header-logo-text 
    text-align: left
    display:inline-block;
    font-size: 16px
  
  .header-links
    float:right
    li
      display: inline-block
      padding: 6px 20px;
      &.header-login
        background-color: colorlink
        border-radius: 4px
        font-weight: 600
        font-size: 13px
        a
          color: white !important
        
        
      